<div id="page-content">
    <h1 class="text-center mt-4"> Login to Weblog </h1>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-8">
                <%= form_with(scope: :session, url: login_path, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
                    <div class="form-group row">
                        <%= f.label :email, class: "col-2 col-form-label text-light" %><br/>
                        <div class="col-10 mt-3">
                            <%= f.email_field :email, class: "form-control shadow rounded", placeholder: "Enter your email address" %>
                        </div>
                    </div>
                    <div class="form-group row">
                        <%= f.label :password, class: "col-2 col-form-label text-light" %><br/>
                        <div class="col-10 mt-3">
                            <%= f.password_field :password, class: "form-control shadow rounded", placeholder: "Enter your password" %>
                        </div>
                    </div>
                    <div class="form-group row justify-content-center mt-3">
                    <%= f.submit "Log in", class: "btn btn-outline-light btn-lg col-3 col-form-label" %>
                    </div>
                <% end %>
            <div class="row justify-content-center">
                <div class="col-4">
                    <% if @flag==1 %>
                        <%= link_to '[Cancel and Return to Home Page]', root_path, class: "text-dark"%>
                    <% elsif @flag==0 %>
                        <%= link_to '[Cancel and Return to Users Page]', users_path, class: "text-dark"%>
                    <% end %>
                </div>
            </div>
            </div>
        </div>
    </div>
</div>
